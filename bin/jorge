#!/usr/bin/env php
<?php

/**
 * This script runs Jorge, a tool for automating development tasks.
 */

if (is_dir(__DIR__ . '/../vendor')) {
    // Running from a clone of the Git repo:
    require_once __DIR__ . '/../vendor/autoload.php';
} else {
    // Running from a copy installed by composer global require:
    require_once __DIR__ . '/../../../autoload.php';
}

use MountHolyoke\Jorge\Jorge;

$JORGE = new Jorge();
$JORGE->configure();
$JORGE->run();
